<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

		<field name="id" type="text" default="0" label="COM_SWA_FORM_LBL_UNIVERSITY_ID"
			   readonly="true" class="readonly"
			   description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="created_by" type="createdby" default=""
			   label="COM_SWA_FORM_LBL_UNIVERSITY_CREATED_BY"
			   description="COM_SWA_FORM_DESC_UNIVERSITY_CREATED_BY"/>

		<field name="name" type="text" size="40" class="inputbox"

			   label="COM_SWA_FORM_LBL_UNIVERSITY_NAME"
			   description="COM_SWA_FORM_DESC_UNIVERSITY_NAME"


			   required="true"
			   filter="safehtml"/>

		<field name="code" type="text" size="40" class="inputbox"

			   label="COM_SWA_FORM_LBL_UNIVERSITY_CODE"
			   description="COM_SWA_FORM_DESC_UNIVERSITY_CODE"


			   required="true"
			   filter="safehtml"/>

		<field name="url" type="text" size="40" class="inputbox"

			   label="COM_SWA_FORM_LBL_UNIVERSITY_URL"
			   description="COM_SWA_FORM_DESC_UNIVERSITY_URL"

			   validate="url"

			   filter="safehtml"/>

		<field name="password" type="text" size="40" class="inputbox"

			   label="COM_SWA_FORM_LBL_UNIVERSITY_PASSWORD"
			   description="COM_SWA_FORM_DESC_UNIVERSITY_PASSWORD"


			   required="true"
			   filter="safehtml"/>

		<field
				name="state"
				type="list"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="inputbox"
				size="1"
				default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

		<field name="checked_out" type="hidden" filter="unset"/>
		<field name="checked_out_time" type="hidden" filter="unset"/>

	</fieldset>

	<fieldset
			name="accesscontrol">
		<field name="asset_id" type="hidden" filter="unset"/>
		<field name="rules"
			   type="rules"
			   label="JFIELD_RULES_LABEL"
			   translate_label="false"
			   filter="rules"
			   validate="rules"
			   class="inputbox"
			   component="com_swa"
			   section="university"
				/>

	</fieldset>

</form>
